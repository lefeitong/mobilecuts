<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:facebook="http://schemas.android.com/tools"
    xmlns:fb="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:gravity="center_horizontal">

    <com.facebook.login.widget.LoginButton
        android:id="@+id/connectfb"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OR"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/textbox_top"
        >

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="First"
            android:textSize="12sp"
            android:textStyle="bold"
            android:gravity="right"/>

        <EditText
            android:layout_marginLeft="10dp"
            android:id="@+id/register_user_firstname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:background="#ffffff"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/textbox_middle"
        >

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Last"
            android:textSize="12sp"
            android:textStyle="bold"
            android:gravity="right"/>

        <EditText
            android:layout_marginLeft="10dp"
            android:id="@+id/register_user_lastname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:background="#ffffff"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/textbox_middle"
        >

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="12sp"
            android:textStyle="bold"
            android:gravity="right"/>

        <EditText
            android:layout_marginLeft="10dp"
            android:id="@+id/register_user_email"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:background="#ffffff"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/textbox_middle"
        >

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Mobile"
            android:textSize="12sp"
            android:textStyle="bold"
            android:gravity="right"/>

        <EditText
            android:layout_marginLeft="10dp"
            android:id="@+id/register_user_mobile"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:background="#ffffff"
            android:inputType="phone"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/textbox_bottom"
        >

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="12sp"
            android:textStyle="bold"
            android:gravity="right"/>

        <EditText
            android:layout_marginLeft="10dp"
            android:id="@+id/register_user_password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:background="#ffffff"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        >

    <Button
        android:id="@+id/register_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:textStyle="bold"
        android:gravity="right"
        android:background="#000000"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="left"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >

        <TextView
            android:id="@+id/register_error_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff0000"
            android:textSize="12sp"
            android:textStyle="bold"

            android:background="#000000"/>

    </LinearLayout>

</LinearLayout>